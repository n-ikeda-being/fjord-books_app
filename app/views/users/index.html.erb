<h1><%= User.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= t('views.user.name') %></th>
      <th><%= t('views.user.postcode') %></th>
      <th><%= t('views.user.address') %></th>
      <th><%= t('views.user.profile') %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.postcode %></td>
        <td><%= user.address %></td>
        <td><%= user.profile %></td>
        <td><%= link_to t('views.common.show'), user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
<h1><%= t('views.common.show', name: User.model_name.human) %></h1>

<p>
  <strong><%= User.human_attribute_name(:email) %>:</strong>
  <%= @user.email %>
</p>

<p>
  <strong><%= t('views.user.name') %>:</strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= t('views.user.postcode') %>:</strong>
  <%= @user.postcode %>
</p>

<p>
  <strong><%= t('views.user.address') %>:</strong>
  <%= @user.address %>
</p>

<p>
  <strong><%= t('views.user.profile') %>:</strong>
  <%= @user.profile %>
</p>

<% if current_user == @user %>
  <%= link_to t('views.common.edit'), edit_user_registration_path %> |
<% end %>
<%= link_to t('views.common.back'), users_path %>
